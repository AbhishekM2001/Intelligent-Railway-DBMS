<%- include("partials/header") -%>

<link rel="icon" 
      type="image/png" 
      href="/css/logo.png" >
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Ticket</title>
<link rel="stylesheet" href="/css/home.css">
    <style>
          .html1  { 
          margin-top: 70px;
          padding: 40px;
          font-family: 'helvetica neue';
          background-image: linear-gradient( to bottom right,orange,#241c82);
          }

          html{
             background: url(/css/background.jpg) no-repeat center center fixed;          /*  for scaling background image  */
              -webkit-background-size: cover;
              -moz-background-size: cover;
              -o-background-size: cover;
              background-size: cover;
              margin-left: 40px;
              margin-right: 40px;
              margin-bottom: 30px;
          }
			 .example::-webkit-scrollbar {
			            display: none;
			        }
    </style>
</head>
<body>

    <div class="progress" style="height: 55px; font-size: 20px; margin-top: 1.5rem;">
        <div class="progress-bar bg-info" role="progressbar" style="width: 100%; color: #ffcc00; background-color: #003d66 !important;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">Train Details</div>
      </div>
      <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
            <tr class="table-primary">
            <th scope="col" style="background-color: #ffcc00 !important; color: #003d66;">Train No</th>
            <th scope="col" style="background-color: #ffcc00 !important; color: #003d66;">Station Name</th>
            <th scope="col" style="background-color: #ffcc00 !important; color: #003d66;">Arrival Time</th>
            <th scope="col" style="background-color: #ffcc00 !important; color: #003d66;">Departure Time</th>
          </tr>
        </thead>
        <tbody>
            <% for(var i=0;i < pnrres.length; i++){ %>
          <tr>
            <td><%= pnrres[i].trainno %></td>
            <td><%= pnrres[i].sname %></td>
            <td><%= pnrres[i].arrival_time %></td>
            <td><%= pnrres[i].departure_time %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
        <a href="/"><button  type="button" class="btn btn-danger" style="margin-left: 630px; margin-top: 6px;">Go Back To Home
      </button>
      </div>
  </div>

  <%- include("partials/footer") -%>